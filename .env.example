# ===========================================
# Smart City Backend - Environment Variables
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://smartcity_user:your_secure_password@db:5432/smartcity_db
POSTGRES_DB=smartcity_db
POSTGRES_USER=smartcity_user
POSTGRES_PASSWORD=your_secure_password

# Django Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-use-50-chars-minimum
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-vps-ip,localhost

# n8n Webhook URLs
# These URLs should point to your n8n instance webhooks
# Format: http://n8n:5678/webhook/your-webhook-path
N8N_TRAFFIC_WEBHOOK=http://n8n:5678/webhook/traffic-data
N8N_REPORT_WEBHOOK=http://n8n:5678/webhook/citizen-report

# CORS Settings (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# n8n Configuration (for the n8n service)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme_secure_password

# ===========================
# n8n Webhook URLs
# ===========================
# Traffic Analysis Webhook - receives location, returns traffic data
N8N_TRAFFIC_WEBHOOK=https://your-n8n-instance.com/webhook/traffic-analysis

# Report Notification Webhook - receives citizen report data (optional)
N8N_REPORT_WEBHOOK=https://your-n8n-instance.com/webhook/report-notification

# ===========================
# CORS Configuration
# ===========================
# Allow all origins (development only)
CORS_ALLOW_ALL_ORIGINS=True

# Production: Use specific origins (comma-separated)
# CORS_ALLOW_ALL_ORIGINS=False
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================
# Static/Media Files (Production)
# ===========================
# STATIC_ROOT=/var/www/static/
# MEDIA_ROOT=/var/www/media/
