# ===========================
# Django Settings
# ===========================
DEBUG=False
SECRET_KEY=your-super-secret-key-change-in-production-min-50-chars

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ===========================
# Database Configuration
# ===========================
# SQLite (Development only)
# DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (Production - Recommended)
DATABASE_URL=postgres://username:password@localhost:5432/smart_city_db

# PostgreSQL with Docker
# DATABASE_URL=postgres://postgres:postgres@db:5432/smart_city_db

# ===========================
# n8n Webhook URLs
# ===========================
# Traffic Analysis Webhook - receives location, returns traffic data
N8N_TRAFFIC_WEBHOOK=https://your-n8n-instance.com/webhook/traffic-analysis

# Report Notification Webhook - receives citizen report data (optional)
N8N_REPORT_WEBHOOK=https://your-n8n-instance.com/webhook/report-notification

# ===========================
# CORS Configuration
# ===========================
# Allow all origins (development only)
CORS_ALLOW_ALL_ORIGINS=True

# Production: Use specific origins (comma-separated)
# CORS_ALLOW_ALL_ORIGINS=False
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================
# Static/Media Files (Production)
# ===========================
# STATIC_ROOT=/var/www/static/
# MEDIA_ROOT=/var/www/media/
